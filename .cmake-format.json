{
  "additional_commands": {
    "td_add_library": {
      "pargs": 1,
      "kwargs": {
        "SOURCES": "*",
        "PUBLIC_DEPS": "*",
        "PRIVATE_DEPS": "*"
      }
    },
    "td_add_application": {
      "pargs": 1,
      "kwargs": {
        "SOURCES": "*",
        "DEPS": "*"
      }
    },
    "td_add_console_application": {
      "pargs": 1,
      "kwargs": {
        "SOURCES": "*",
        "DEPS": "*"
      }
    },
    "td_add_test": {
      "pargs": 1,
      "kwargs": {
        "SOURCES": "*",
        "DEPS": "*",
        "TEST_ARGS": "*"
      }
    }
  },
  "format": {
    "disable": false,
    "line_width": 120,
    "tab_size": 4,
    "max_subgroups_hwrap": 2,
    "max_pargs_hwrap": 4,
    "dangle_parens": false,
    "min_prefix_chars": 4,
    "max_prefix_chars": 10,
    "max_lines_hwrap": 2,
    "line_ending": "auto",
    "command_case": "canonical",
    "keyword_case": "upper",
    "enable_sort": true,
    "autosort": true
  }
}
