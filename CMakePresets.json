{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "_common",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "toolchainFile": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_INSTALL_OPTIONS": "--no-print-usage",
        "CMAKE_OPTIMIZE_DEPENDENCIES": "ON"
      }
    },
    {
      "name": "_msvc-common",
      "inherits": "_common",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/Zi /W4 /WX /MP /EHsc /permissive- /w14242 /w14254 /w14263 /w14265 /w14287 /w14289 /w14296 /w14311 /w14545 /w14546 /w14547 /w14549 /w14555 /w14619 /w14640 /w14826 /w14905 /w14906 /w14928 /w44365 /wd4324 /external:W0 /analyze:external- /external:anglebrackets",
        "CMAKE_CXX_FLAGS_DEBUG": "/Od /Ob0 /JMC",
        "CMAKE_EXE_LINKER_FLAGS": "/DEBUG",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
      }
    },
    {
      "name": "msvc2019",
      "inherits": "_msvc-common",
      "displayName": "Visual Studio 2019",
      "generator": "Visual Studio 16 2019",
      "architecture": "x64"
    },
    {
      "name": "msvc2022",
      "inherits": "_msvc-common",
      "displayName": "Visual Studio 2022",
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "msvc2022-clang",
      "inherits": "_msvc-common",
      "displayName": "Visual Studio 2022 (Clang)",
      "generator": "Visual Studio 17 2022",
      "toolset": "ClangCL"
    },
    {
      "name": "_linux-common",
      "inherits": "_common",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-DSDL_main=main -Wall -Werror -Wno-attributes -ggdb"
      }
    },
    {
      "name": "make",
      "inherits": "_linux-common",
      "displayName": "Makefiles",
      "generator": "Unix Makefiles"
    },
    {
      "name": "ninja",
      "inherits": "_linux-common",
      "displayName": "Ninja",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "mingw",
      "inherits": "_common",
      "displayName": "MinGW",
      "generator": "MinGW Makefiles",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "--std=c++2a -DSDL_main=main -Wall -Werror -Wno-attributes"
      },
      "environment": {
        "VCPKG_TARGET_TRIPLET": "x64-mingw-dynamic",
        "VCPKG_DEFAULT_TRIPLET": "x64-mingw-dynamic",
        "VCPKG_DEFAULT_HOST_TRIPLET": "x64-mingw-dynamic"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "msvc2019",
      "configurePreset": "msvc2019"
    },
    {
      "name": "msvc2022",
      "configurePreset": "msvc2022"
    },
    {
      "name": "msvc2022-clang",
      "configurePreset": "msvc2022-clang"
    },
    {
      "name": "mingw",
      "configurePreset": "mingw"
    },
    {
      "name": "make",
      "configurePreset": "make"
    },
    {
      "name": "ninja",
      "configurePreset": "ninja"
    }
  ],
  "testPresets": [
    {
      "name": "msvc2019",
      "configurePreset": "msvc2019"
    },
    {
      "name": "msvc2022",
      "configurePreset": "msvc2022"
    },
    {
      "name": "msvc2022-clang",
      "configurePreset": "msvc2022-clang"
    },
    {
      "name": "mingw",
      "configurePreset": "mingw"
    },
    {
      "name": "make",
      "configurePreset": "make"
    },
    {
      "name": "ninja",
      "configurePreset": "ninja"
    }
  ]
}
